<?xml version="1.0" encoding="utf-8"?>
<form>
	<field name="smtp_id" 
		type="text" 
		default="0" 
		label="JGLOBAL_FIELD_ID_LABEL" 
		description ="JGLOBAL_FIELD_ID_DESC" 
		class="readonly" 
		readonly="true"/>

	<field name="smtp_name" 
		type="text" 
		label="COM_TOES_SMTP_ACCOUNT_NAME" 
		description="COM_TOES_SMTP_ACCOUNT_NAME_DESC" 
		class="inputbox"
		size="40" 
		required="true"/>

	<field name="smtp_host" 
		type="text" 
		label="COM_TOES_SMTP_ACCOUNT_HOST" 
		description="COM_TOES_SMTP_ACCOUNT_HOST_DESC" 
		class="inputbox"
		size="40" 
		required="true"/>

	<field name="smtp_auth" 
		type="radio" 
		label="COM_TOES_SMTP_ACCOUNT_AUTH" 
		description="COM_TOES_SMTP_ACCOUNT_AUTH_DESC" 
		class="btn-group btn-group-yesno"
		size="40" 
		default="0"
		required="true" >
			<option value="1">JYES</option>
			<option value="0">JNO</option>
	</field>

	<field name="smtp_user" 
		type="text" 
		label="COM_TOES_SMTP_ACCOUNT_USERNAME" 
		description="COM_TOES_SMTP_ACCOUNT_USERNAME_DESC" 
		class="inputbox"
		size="40" 
		required="true"/>

	<field name="smtp_pass" 
		type="text" 
		label="COM_TOES_SMTP_ACCOUNT_PASSWORD" 
		description="COM_TOES_SMTP_ACCOUNT_PASSWORD_DESC" 
		class="inputbox"
		size="40" 
		required="true"/>

	<field name="smtp_port" 
		type="text" 
		label="COM_TOES_SMTP_ACCOUNT_PORT" 
		description="COM_TOES_SMTP_ACCOUNT_PORT_DESC" 
		class="inputbox"
		default="25"
		size="40" 
		required="true"/>

	<field name="smtp_secure" 
		type="list" 
		label="COM_TOES_SMTP_ACCOUNT_SECURE_TYPE" 
		description="COM_TOES_SMTP_ACCOUNT_SECURE_TYPE_DESC" 
		class="inputbox"
		size="1" 
		required="true" >
		<option value="none">None</option>
		<option value="ssl">SSL/TLS</option>
		<option value="tls">STARTTLS</option>
	</field>

	<field	name="published" type="list" class="inputbox" default="1" size="1" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
		<option value="1">JPUBLISHED</option>
		<option value="0">JUNPUBLISHED</option>
	</field>
</form>
