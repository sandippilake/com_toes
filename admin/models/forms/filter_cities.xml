			type="text"
			label="COM_TOES_SELECT_COUNTRY"
			description="COM_TOES_SELECT_COUNTRY_DESC"
			hint="JSEARCH_FILTER"
		/>
		
		<field
			name="country_id"
			type="countries"
			label="COM_TOES_SELECT_COUNTRY"
